              "password": {
                "type": "string",
                "description": "Password of the virtual server"
              },
              "type": {
                "type": "string",
                "description": "Type of credentials",
                "enum": [
                  "OPERATING_SYSTEM",
                  "CONTROL_PANEL"
                ]
              }
            },
            "required": [
              "username",
              "password",
              "type"
            ]
          },
          "examples": {
            "example": {
              "value": {
                "username": "root",
                "password": "my_secret_password",
                "type": "OPERATING_SYSTEM"
              }
            }
          }
        }
