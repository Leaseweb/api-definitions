{
  "title": "message",
  "type": "object",
  "properties": {
    "postedBy": {
      "type": "string",
      "enum": [
        "CUSTOMER",
        "ABUSE_AGENT"
      ],
      "description": "A string to indicating if the message was posted by the customer or the abuse agent.",
      "example": "CUSTOMER"
    },
    "postedAt": {
      "type": "string",
      "description": "The timestamp when the message was posted.",
      "example": "2015-09-30T06:23:40+00:00"
    },
    "body": {
      "type": "string",
      "description": "The posted message.",
      "example": "I have resolved this issue."
    },
    "attachment": {
      "$ref": "./attachment.json"
    }
  }
}