    "requestBody": {
      "required": false,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/nullRouteIpOpts.json"
          },
          "example": {
            "automatedUnnulingAt": 2,
            "comment": "Getting DDoS"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "OK.",
        "content": {
          "application/json": {
            "example": {
              "ip": "10.0.0.1",
              "prefixLength": "28",
              "version": 4,
              "reverseLookup": "a-valid-domain.xpto",
              "mainIp": false,
              "networkType": "INTERNAL",
              "nullRouted": true,
              "ddos": {
                "detectionProfile": "STANDARD_DEFAULT",
                "protectionType": "STANDARD"
              }
            },
