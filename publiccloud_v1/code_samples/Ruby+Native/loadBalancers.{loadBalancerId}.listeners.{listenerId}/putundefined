require 'uri'
require 'net/http'
require 'openssl'

url = URI("https://api.leaseweb.com/publicCloud/v1/loadBalancers/695ddd91-051f-4dd6-9120-938a927a47d0/listeners/695ddd91-051f-4dd6-9120-938a927a47d0")

http = Net::HTTP.new(url.host, url.port)
http.use_ssl = true
http.verify_mode = OpenSSL::SSL::VERIFY_NONE

request = Net::HTTP::Put.new(url)
request["content-type"] = 'application/json'
request["X-LSW-Auth"] = 'REPLACE_KEY_VALUE'
request.body = "{\"protocol\":\"HTTP\",\"port\":0,\"certificate\":{\"privateKey\":\"-----BEGIN EC PRIVATE KEY----------END EC PRIVATE KEY-----\",\"certificate\":\"-----BEGIN CERTIFICATE----------END CERTIFICATE-----\",\"chain\":\"string\"},\"defaultRule\":{\"targetGroupId\":\"48ef2c38-9f7c-40bd-9b53-7e9ad33e6373\"}}"

response = http.request(request)
puts response.read_body