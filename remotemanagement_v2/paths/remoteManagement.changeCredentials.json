              "value": {
                "password": "mys3cretp@ssw0rd"
              }
            }
          },
          "schema": {
            "type": "object",
            "$schema": "http://json-schema.org/draft-04/schema",
            "id": "http://jsonschema.net",
            "properties": {
              "password": {
                "type": "string",
                "summary": "The new password for OpenVPN authentication",
                "description": "The password should be at least 8 characters and consisting of uppercase, lowercase, digits and special characters",
                "minLength": 8,
                "required": true
              }
            }
          }
        }
      }
    },
